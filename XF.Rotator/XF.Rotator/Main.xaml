<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:rotator="clr-namespace:XF.Rotator;assembly=XF.Rotator"
             xmlns:customControl="clr-namespace:XF.Rotator.CustomControl;assembly=XF.Rotator"
             x:Class="XF.Rotator.Main"
             x:Name="This">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <rotator:SimpleRotator BindingContext="{x:Reference This}" x:Name="rotator"  BackgroundColor="Aqua" HeightRequest="500">
                <customControl:RotatorView VerticalOptions="FillAndExpand"  BackgroundColor="Black">

                </customControl:RotatorView>
                <customControl:RotatorView  BackgroundColor="Yellow"  ID="Yellow">
<StackLayout>
    <Entry></Entry>
</StackLayout>
                </customControl:RotatorView>
                <customControl:RotatorView HeightRequest="100" VerticalOptions="FillAndExpand"  BackgroundColor="ForestGreen" ID="ForestGreen">

                </customControl:RotatorView>
            </rotator:SimpleRotator>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>